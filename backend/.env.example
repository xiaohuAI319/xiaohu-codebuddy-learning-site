# 数据库配置
MONGODB_URI=mongodb://localhost:27017/xiaohu-codebuddy
# 如果使用Docker with auth: mongodb://admin:password123@localhost:27017/xiaohu-codebuddy?authSource=admin

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 服务器配置
PORT=5000
NODE_ENV=development

# 管理员账号配置
ADMIN_EMAIL=admin@xiaohu.com
ADMIN_PASSWORD=admin123456

# 文件上传配置
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760

# 邮件配置（可选）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@xiaohu.com

# 前端URL
FRONTEND_URL=http://localhost:3000